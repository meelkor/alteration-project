{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["dom", "es2015", "es2016", "es2017", "es2018", "esnext"],
    "jsx": "react",
    "jsxFactory": "createElement",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "noEmitOnError": false,
    "baseUrl": "./src",
    "paths": {
        "@alt/common": ["common"],
        "@alt/common/*": ["common/*"],
        "@alt/engine": ["engine"],
        "@alt/engine/*": ["engine/*"],
        "@alt/game": ["game"],
        "@alt/game/*": ["game/*"],
    },
  },
}
